<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>学生成绩管理系统</title>
    <style>
        /* 全局样式 */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* 容器样式 */
        .container {
            width: 80%;
            margin: 20px auto;
            background-color: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* 标题样式 */
        h1 {
            text-align: center;
            color: #333;
        }

        /* 表单样式 */
        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* 学生列表样式 */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ccc;
        }

        th {
            background-color: #f4f4f4;
        }

        /* 排名按钮样式 */
        #rankButton {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>学生成绩管理系统</h1>
        <form id="studentForm">
            <label for="name">学生姓名:</label>
            <input type="text" id="name" required>
            <label for="math">数学成绩:</label>
            <input type="number" id="math" min="0" max="100" required>
            <label for="chinese">语文成绩:</label>
            <input type="number" id="chinese" min="0" max="100" required>
            <label for="dataStructure">数据结构成绩:</label>
            <input type="number" id="dataStructure" min="0" max="100" required>
            <label for="network">计算机网络成绩:</label>
            <input type="number" id="network" min="0" max="100" required>
            <button type="submit">添加学生</button>
        </form>
        <button id="rankButton">按总分排名</button>
        <table id="studentTable">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>数学</th>
                    <th>语文</th>
                    <th>数据结构</th>
                    <th>计算机网络</th>
                    <th>总分</th>
                    <th>平均分</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <script>
        // 存储学生数据的数组
        const students = [];
        const studentTable = document.getElementById('studentTable');
        const studentForm = document.getElementById('studentForm');
        const rankButton = document.getElementById('rankButton');

        // 渲染学生列表
        function renderStudents() {
            const tbody = studentTable.querySelector('tbody');
            tbody.innerHTML = '';
            students.forEach((student, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student.name}</td>
                    <td>${student.math}</td>
                    <td>${student.chinese}</td>
                    <td>${student.dataStructure}</td>
                    <td>${student.network}</td>
                    <td>${student.total}</td>
                    <td>${student.average}</td>
                `;
                tbody.appendChild(row);
            });
        }

        // 添加学生
        studentForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('name').value;
            const math = parseInt(document.getElementById('math').value);
            const chinese = parseInt(document.getElementById('chinese').value);
            const dataStructure = parseInt(document.getElementById('dataStructure').value);
            const network = parseInt(document.getElementById('network').value);

            const total = math + chinese + dataStructure + network;
            const average = total / 4;

            const student = {
                name,
                math,
                chinese,
                dataStructure,
                network,
                total,
                average
            };

            students.push(student);
            renderStudents();
            studentForm.reset();
        });

        // 按总分排名
        rankButton.addEventListener('click', () => {
            students.sort((a, b) => b.total - a.total);
            renderStudents();
        });
    </script>
</body>

</html>
